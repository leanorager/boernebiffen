---
interface Props {
  image: string; // fx "/images/vitello.png"
  alt?: string; // valgfrit
  stylingclasses?: string; // ekstra tailwind hvis nødvendigt
}

const { image, alt = "", stylingclasses = "" } = Astro.props;

// Fælles styling for cardet (match det på billedet)
const baseClasses =
  "rounded-xl overflow-hidden shadow-md flex items-center justify-center bg-black/10";
---

<article class:list={[baseClasses, stylingclasses]}>
  <img
    src={image}
    alt={alt}
    class="w-full h-full object-contain"
    loading="lazy"
  />
</article>
