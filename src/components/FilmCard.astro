---
import Text from "./Text.astro";

interface Props {
  img: string;
  title: string;
  time: number | string;
  href?: string;
}

const { img, title, time, href = "/singleview" } = Astro.props;
---

<a
  href={href}
  class="block w-full max-w-[390px] lg:max-w-[440px] group cursor-pointer"
>
  <article>
    <!-- Wrapper sÃ¥ vi kan lave overlay -->
    <div class="relative w-full h-auto rounded-[5px] overflow-hidden">
      <!-- Selve billedet med zoom-effekt -->
      <img
        src={img}
        alt={title}
        class="w-full h-auto object-cover rounded-[5px] transition-transform duration-400 ease-out
           group-hover:scale-105"
      />

      <!-- Hover-overlay (sort 40%) -->
      <div
        class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100
               transition-opacity duration-300 rounded-[5px]"
      >
      </div>
    </div>

    <!-- Titel + tid -->
    <div class="mt-1.5 flex items-center justify-between gap-4">
      <Text teksttype="p">{title}</Text>

      <div class="flex items-center gap-2">
        <img
          src="/svg/time.svg"
          alt=""
          aria-hidden="true"
          class="w-[13.5px] h-[13.5px]"
        />
        <Text teksttype="p">{time} min</Text>
      </div>
    </div>
  </article>
</a>
