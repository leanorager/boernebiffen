---
import Link from "./Link.astro";
---

<header class="w-full bg-dark-gray sticky top-0 z-50">
  <div
    class="mx-auto flex items-center justify-between gap-4
           px-4 py-4 lg:px-12 lg:py-5"
  >
    <!-- Logo + desktop-nav -->
    <div class="flex items-center gap-8">
      <!-- Logo -->
      <a href="/" class="inline-flex items-center">
        <img
          src="/svg/bornebiffen_logo.svg"
          alt="Børnebiffen"
          class="h-[28px] lg:h-[32px] w-auto"
        />
      </a>

      <!-- Desktop-nav -->
      <nav class="hidden lg:flex items-center gap-6">
        <!-- Hjem -->
        <div class="flex flex-row gap-2 items-center">
          <img
            src="/svg/home.svg"
            alt="Hus-ikon"
            aria-hidden="true"
            class="h-5 w-5"
          />
          <Link href="/" teksttype="p_bigger" stylingclasses="text-off-white">
            Hjem
          </Link>
        </div>

        <!-- Kategorier -->
        <div class="flex flex-row gap-2 items-center">
          <img
            src="/svg/binoculars.svg"
            alt="Kikkert-ikon"
            aria-hidden="true"
            class="h-5 w-5"
          />
          <Link
            href="/category"
            teksttype="p_bigger"
            stylingclasses="text-off-white"
          >
            Kategorier
          </Link>
        </div>

        <!-- Mine favoritter -->
        <div class="flex flex-row gap-2 items-center">
          <img
            src="/svg/heart_filled.svg"
            alt="Hjerte-ikon"
            aria-hidden="true"
            class="h-5 w-5"
          />
          <Link href="/" teksttype="p_bigger" stylingclasses="text-off-white">
            Mine favoritter
          </Link>
        </div>
      </nav>
    </div>

    <!-- Mobil: Kategorier-pill + Chromecast -->
    <div class="flex items-center gap-3 lg:hidden">
      <!-- Kategorier-pill -->
      <div
        class="flex flex-row items-center gap-2
               rounded-full bg-black px-5 py-2.5"
      >
        <img
          src="/svg/binoculars.svg"
          alt="Kikkert-ikon"
          aria-hidden="true"
          class="h-5 w-5"
        />
        <Link
          href="/category"
          teksttype="p_bigger"
          stylingclasses="text-off-white"
        >
          Kategorier
        </Link>
      </div>

      <!-- Chromecast-knap -->
      <button
        type="button"
        class="inline-flex h-11 w-11 items-center justify-center
               rounded-full bg-black"
        aria-label="Cast"
      >
        <img
          src="/svg/chromecast.svg"
          alt="Chromecast-ikon"
          aria-hidden="true"
          class="h-5 w-5"
        />
      </button>
    </div>

    <!-- Desktop: Søg + profil -->
    <div class="hidden lg:flex items-center gap-6">
      <!-- Søg -->
      <div class="flex flex-row items-center gap-2">
        <Link
          href="/search"
          teksttype="p_bigger"
          stylingclasses="text-off-white"
        >
          Søg
        </Link>
        <img
          src="/svg/search.svg"
          alt="Søge-ikon"
          aria-hidden="true"
          class="h-[30px] w-[30px]"
        />
      </div>

      <!-- Min profil -->
      <div class="flex flex-row items-center gap-2">
        <Link
          href="/profile"
          teksttype="p_bigger"
          stylingclasses="text-off-white"
        >
          Min profil
        </Link>
        <img
          src="/svg/profile.svg"
          alt="Profil-ikon"
          aria-hidden="true"
          class="h-[30px] w-[30px]"
        />
      </div>
    </div>
  </div>
</header>
