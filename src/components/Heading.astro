---
// Henter parametrene fra Astro.props
const {
  htmlheading = "h4",
  size = "h4",
  font = "",
  stylingclasses = "",
} = Astro.props;

const Htmlheading = htmlheading;

// fælles styling for ALLE headings
const baseClasses = "text-off-white"; // ← Her sætter du farven!

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  h1: "text-[87px] lg:text-[135px] font-bold",
  h2: "text-[40px] lg:text-[75px] font-semibold",
  h3: "text-35px] lg:text-[56px] font-semibold",
  h4: "text-[18px] lg:text-[24px] font-semibold",
  h5: "text-[16px] lg:text-[20px] font-semibold",
};

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige skrifttyper.
const fontClasses = {};
---

<Htmlheading
  class:list={[
    baseClasses,
    sizeClasses[size],
    fontClasses[font],
    stylingclasses, // skal stå sidst, så du kan overskrive hvis nødvendigt
  ]}
>
  <slot />
</Htmlheading>
