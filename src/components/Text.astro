---
// Henter parametrene fra Astro.props
const { teksttype = "p", stylingclasses = "" } = Astro.props;

// Fælles styling for ALLE teksttyper
const baseClasses = "text-off-white";

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  p: "text-[14px] lg:text-[16px] font-medium",
  p_smaller: "text-[12px] lg:text-[14px] font-normal",
  p_bigger: "text-[16px] lg:text-[18px] font-medium",
};
---

<p class:list={[baseClasses, sizeClasses[teksttype], stylingclasses]}>
  <slot />
</p>
