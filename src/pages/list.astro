---
import MainLayout from "../layouts/MainLayout.astro";
import Heading from "../components/Heading.astro";
import Link from "../components/Link.astro";
import FilmCard from "../components/FilmCard.astro";
---

<MainLayout>
  <main class="px-4 py-8 lg:px-12">
    <div class="flex items-center gap-2 mb-8">
      <Link href="/#" teksttype="h4" stylingclasses="text-gray">Forside</Link>
      <Heading htmlheading="h4" size="h4" stylingclasses="!text-gray">
        >
      </Heading>
      <Link href="/category" teksttype="h4" stylingclasses="text-gray"
        >Kategorier</Link
      >
